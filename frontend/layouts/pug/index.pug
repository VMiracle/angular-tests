//- Este archivo representa la estructura base de la pagina HTML del sitio
//- Incluimos nuestra libreria de mixins
include mixins.pug

//- Declaramos que la pagina es HTML5
doctype html

//- Declaramos que la pagina esta en espa√±ol
html(lang='es')
  head
    //- Declaramos que la pagina esta codificada con caracteres UTF-8
    meta(charset='UTF-8')

    //- Esta linea permite que la pagina sea responsiva
    meta(
      name='viewport'
      content='width=device-width, initial-scale=1.0'
    )

    //- Importamos las hojas de estilo que necesita el projecto
    include stylesheets.pug
    
    //- Declaramos el favicon del sitio
    include favicon.pug

    //- El titulo de la pagina del sitio
    title INSERTE EL NOMBRE DEL PROYECTO AQUI

  body(
    ng-app='INSERTE EL NOMBRE DEL PROYECTO AQUI'
    ng-cloak
  )
    //- Contenido principal del sitio
    ui-view

    //- Importamos todos los scripts del sitio
    include scripts.pug