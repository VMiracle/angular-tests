//- Este archivo contiene las sentencias que permitiran importar todos los 
//- archivos CSS que son necesarios para la correcta presentacion del sitio
//- Incluimos nuestra libreria de mixins
include mixins.pug

//- Importa un archivo de hoja de estilo de CSS
//- [in]  path (string): el URL desde donde se importara el archivo
mixin importStyleSheet(path)
  link(
    rel='stylesheet'
    type='text/css'
    href=path
  )

mixin importProjectStyleSheet(file)
  +importStyleSheet(dir.stylesheets + file)

//- Importa un archivo de hoja de estilo de CSS desde la carpeta external del 
//- proyecto
//- [in]  path (string): el URL desde donde se importara el archivo
mixin importExternalStyleSheet(path)
  +importStyleSheet(dir.external + path)

//- Aqui importamos todos nuestros archivos CSS
//- ADVERTENCIA: el orden es importante
+importProjectStyleSheet('app-style.css')